<dm>
	<!--=========================================-->
	<!--========= СНАЙПЕРСКОЕ СВЕДЕНИЕ ==========-->
	<!--=========================================-->
    <svedenie_as>
	
	<!--=========================================-->
	<!--======== УВЕЛИЧЕНИЕ ИНТЕРФЕЙСА ==========-->
	<!--=========================================-->
	<intscale>
			<scale width="100" height="100"/> <!--- Увеличение размера сведения (всего полностью), для подгонки под большие и малые разрешения экрана width, height - размер в % (100-оригина) -->
	</intscale>
 	<!--=========================================-->
	<!--================= МАРКЕР ================-->
	<!--=========================================-->
	<center>
			<location rotation="0"/> <!-- rotation - угол поворота элемента -->
			<filter size="3" angle="0" distance="0" color="0x000000" alpha="100" strength="200"/> <!-- size - размер тени. angle - угол тени. distance - расстояние смещения тени. color - цвет тени. alpha - прозрачность тени(100 - непрозрачно, 0 - прозрачно). strength - степень нанесения тени в процентах -->
			<color color="0xbdbdbd"/> <!-- color - цвет маркера орудия -->
			<scale x="100" y="100"/> <!-- x, y - масштаб элемента в процентах. 100 - оригинальный размер -->
	</center>
	<!--=========================================-->
	<!--======== ОКРУЖНОСТЬ СВЕДЕНИЯ ============-->
	<!--=========================================-->
	<circle>
			<color reloaded="0x00bbff" reloading="0xecdb7a" reloadingBack="0xb1b1b1"/> <!-- reloaded - цвет окружности сведения при заряженном орудии. reloading - цвет окружности сведения во время перезарядки орудия, reloadingBack - цвет окружности-подложки-->			
			<athickness value="0"/> <!-- thickness - толщина аркадного сведения (доступные значения 0, 1-6). При значении = 0, сведение работает в стандартном режиме и в настройках инры можно выбрать одно из 3х разных сведений. При значении 1-6 - увеличивается толщина сведения, при этом в настройках игры доступно лишь одно сведение (первое). -->
			<sthickness value="0"/> <!-- thickness - толщина снайперского сведения (доступные значения 0, 1-6). При значении = 0, сведение работает в стандартном режиме и в настройках инры можно выбрать одно из 3х разных сведений. При значении 1-6 - увеличивается толщина сведения, при этом в настройках игры доступно лишь одно сведение (первое). -->
			<fill color="0xbdbdbd" alpha="20"/>  <!-- настройка заливки сведения. color - цвет заливки, alpha - прозрачность заливки. -->
	</circle>
	<!--=========================================-->
	<!--====== БРОНЕПРОБИТИЕ ТЕКСТОВОЕ ==========-->
	<!--=========================================-->
	<probitie visible="true"> <!-- visible - видимость элемента, true/false - включено/выключено -->
			<location x="170" y="150"/> <!-- x, y - координаты расположения элемента. Отсчет координат идет от перекрестия(центральный маркер) -->
			<text font="MicraDi" size="15" angle ="0" alpha="100" align="center" bold="false" leading="0" width="120" height="20"/> <!-- font - шрифт. size - размер шрифта. color - цвет шрифта. alpha - прозрачность тени(100 - непрозрачно, 0 - прозрачно). align - выравнивание текста, left/right/center - лево/право/центр. bold - жирный тест, true/false - включено/выключено. leading - межстрочный интервал. width, height - ширина и высота поля, angle - поворот поля-->
			<filter size="1" angle="0" distance="0" color="0x000000" alpha="100" strength="200"/> <!-- size - размер тени. angle - угол тени. distance - расстояние смещения тени. color - цвет тени. alpha - прозрачность тени(100 - непрозрачно, 0 - прозрачно). strength - степень нанесения тени в процентах -->
	</probitie>
	</svedenie_as>
	
	<!--=========================================-->
	<!--======== АРТИЛЛЕРИЙСКОЕ СВЕДЕНИЕ ========-->
	<!--=========================================-->
	<svedenie_art>
	
	<!--=========================================-->
	<!--======= ОСНОВНЫЕ ТОЧКИ СВЕДЕНИЯ =========-->
	<!--=========================================-->
	<point>
			<filter size="5" angle="0" distance="10" color="0x0000ff" alpha="100" strength="500"/> <!-- ТЕНЬ ДЛЯ СОСТОЯНИЯ - ЗАРЯЖЕНО! size - размер тени. angle - угол тени. distance - расстояние смещения тени. color - цвет тени. alpha - прозрачность тени(100 - непрозрачно, 0 - прозрачно). strength - степень нанесения тени в процентах -->
			<color reload="0xbdbdbd" reloading="0xff0000"/> <!-- reloaded - цвет точек сведения при заряженном орудии. reloading - цвет точек сведения во время перезарядки орудия-->			
			<scale x="100" y="100"/> <!-- x, y - масштаб элемента в процентах. 100 - оригинальный размер -->
	</point>
	<pointR>
			<filter size="5" angle="0" distance="10" color="0xff0000" alpha="100" strength="500"/> <!-- ТЕНЬ ДЛЯ СОСТОЯНИЯ - ПЕРЕЗАРЯДКА! size - размер тени. angle - угол тени. distance - расстояние смещения тени. color - цвет тени. alpha - прозрачность тени(100 - непрозрачно, 0 - прозрачно). strength - степень нанесения тени в процентах -->
	</pointR>
	<!--=========================================-->
	<!--================= МАРКЕР ================-->
	<!--=========================================-->
	<center>
			<type type="7"/> <!--тип маркера (1-7)-->
			<filter size="3" angle="0" distance="0" color="0x000000" alpha="100" strength="200"/> <!-- size - размер тени. angle - угол тени. distance - расстояние смещения тени. color - цвет тени. alpha - прозрачность тени(100 - непрозрачно, 0 - прозрачно). strength - степень нанесения тени в процентах -->
			<color color="0x0000ff"/> <!-- color - цвет маркера сведения -->
			<scale x="100" y="100"/> <!-- x, y - масштаб элемента в процентах. 100 - оригинальный размер -->
			<!-- Виды маркеров 1-кольцо, 2-галка, 3-"вспышка", 4-точка, 5-крест, 6-полукрест, 7-крест без центра -->
	</center>
	
	</svedenie_art>
